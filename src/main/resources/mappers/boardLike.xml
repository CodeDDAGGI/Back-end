<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.finalProject.Back.repository.BoardLikeMapper">

    <insert id="like" useGeneratedKeys="true" keyProperty="id">
        insert into board_like
        value(default, #{cafeId}, #{userId})
    </insert>

    <delete id="disLike">
        delete
        from
            board_like
        where
            id = #{boardLikeId}
    </delete>

    <delete id="deleteByBoardId">
        delete
        from
            board_like
        where
            board_id = #{boardId}
    </delete>

    <select id="findByBoardIdAndUserId" resultType="com.finalProject.Back.entity.board.BoardLike">
        select
            id,
            board_id as boardId,
            user_id as userId
        from
            board_like
        where
            board_id = #{boardId}
            AND user_id = #{userId}
    </select>

    <select id="getLikeCountByBoardId" resultType="java.lang.Integer">
        select
            count(*)
        from
            board_like
        where
            board_id = #{boardId}
    </select>

</mapper>