<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.finalProject.Back.repository.MessageMapper">

    <insert id="save"
            useGeneratedKeys="true"
            keyProperty="id">
        insert into message
        values(default, #{type}, "Noread", #{content}, #{userId}, now(), #{contentId})
    </insert>
    <delete id="deleteById">
        delete
        from
            message
        where
            id = #{id}
    </delete>
    <select id="findByUserId" resultType="com.finalProject.Back.entity.Message">
        select
            id,
            type,
            status,
            content,
            user_id as userId,
            message_date as messageDate,
            content_id as contentId
        from
            message
        where
            user_id = #{userId} or user_id = ""
    </select>
</mapper>