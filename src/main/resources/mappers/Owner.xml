<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.finalProject.Back.repository.OwnerMapper">
    <insert id="saveOwner"
            useGeneratedKeys="true"
            keyProperty="id">>
        insert
        into owner
        values(default , default , #{business_number}, #{company_name} ,#{company_address})
    </insert>
    <delete id="deleteUser">
        delete
        from
            user
        where
        id = #{id}
    </delete>
    <delete id="deleteCafe">
        delete
        from
            cafe
        where
        id = #{id}
    </delete>

    <select id="getUsers" resultType="com.finalProject.Back.dto.response.RespGetUserDto">
        select
            *
        from
            user
        where
        role = 'USER'
    </select>
    <select id="getOwners" resultType="com.finalProject.Back.dto.response.RespGetOwnerDto">
        select
            *
        from
            user u,
            cafe cf
        where
            role = 'OWNER' AND
            cf.owner_id = u.id
    </select>
</mapper>